<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemInformaticaAtelierAuto.Mobile.Views.EditProgramarePage"
             Title="Editează programare">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Text="{Binding Masina}" />
        <DatePicker Date="{Binding Data}" />
        <Editor Text="{Binding Descriere}" HeightRequest="100" />

        <Button Text="Salvează modificările"
                BackgroundColor="#0d6efd"
                TextColor="White"
                Command="{Binding SaveCommand}" />

        <Button Text="Șterge programarea"
                BackgroundColor="#dc3545"
                TextColor="White"
                Command="{Binding DeleteCommand}" />
    </VerticalStackLayout>
</ContentPage>
