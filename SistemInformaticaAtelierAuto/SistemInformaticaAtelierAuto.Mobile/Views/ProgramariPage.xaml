<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemInformaticaAtelierAuto.Mobile.Views.ProgramariPage"
             Title="Programări"
             BackgroundColor="#121212">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="➕"
             Command="{Binding AddProgramareCommand}" />
    </ContentPage.ToolbarItems>

    <CollectionView ItemsSource="{Binding Programari}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedProgramare}">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="12"
       Padding="14"
       CornerRadius="14"
       BackgroundColor="#1E1E1E"
       BorderColor="#0D6EFD"
       HasShadow="True">

    <VerticalStackLayout Spacing="6">
        <Label Text="{Binding Masina}"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="White" />

        <Label Text="{Binding Data}"
               FontSize="13"
               TextColor="#B0B0B0" />

        <Label Text="{Binding Descriere}"
               FontSize="14"
               TextColor="#E0E0E0" />
    </VerticalStackLayout>
</Frame>

            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>


</ContentPage>
