@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5 text-center">
        <h1 class="display-5 fw-bold">Sistem Informatic Atelier Auto</h1>
        <p class="fs-4">
            Gestionează mașini, clienți și programări rapid și eficient.
        </p>

        @if (!User.Identity.IsAuthenticated)
        {
            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">
                Autentificare
            </a>
        }
        else
        {
            <a class="btn btn-success btn-lg" asp-page="/Cars/Index">
                Vezi mașinile
            </a>
        }
    </div>
</div>

<div class="row text-center">
    <div class="col-md-4">
        <h3>🚗 Mașini</h3>
        <p>Administrare completă parc auto.</p>
    </div>
    <div class="col-md-4">
        <h3>👤 Clienți</h3>
        <p>Date clienți și istoricul lor.</p>
    </div>
    <div class="col-md-4">
        <h3>📅 Programări</h3>
        <p>Planificare intervenții service.</p>
    </div>
</div>